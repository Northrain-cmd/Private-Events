<div class="col-4 mx-auto text-center mb-2">
  <%= form_with model: @event, class: 'flex flex-column' do |f| %>
      
      <% if @event.errors.full_messages.any? %>
        <ul class='alert alert-danger'>
          <% @event.errors.full_messages.each do |msg| %>
            <li class='ms-3'><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
     
      <%= f.label :title, 'Event name', class: 'form-label'  %>
      <%= f.text_field :title, class: 'form-control mb-3' %>
      <%= f.label :location, 'Location', class: 'form-label'  %>
      <%= f.text_field :location, class: 'form-control mb-3' %>
      <%= f.label :description, 'Description', class: 'form-label'  %>
      <%= f.text_area :description, class: 'form-control mb-3' %>
      <%= f.label :start_date, 'Start date', class: 'form-label'  %>
      <%= f.datetime_local_field :start_date, class: 'form-control mb-3' %>
      <%= f.label :finish_date, 'Finish date', class: 'form-label'  %>
      <%= f.datetime_local_field :finish_date, class: 'form-control mb-3' %>
      <%= f.label :price, 'Price', class: 'form-label' %>
      <%= f.number_field :price, step: 1, min: 0 , class: 'form-control mb-3' %>
      <%= f.submit class: 'btn btn-success mb-3' %>
  <% end %>
</div>
  
