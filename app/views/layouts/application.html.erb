<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <nav class="navbar navbar-light">
        <% if user_signed_in? %>
          <%= link_to 'Logout', destroy_user_session_path, class: 'btn btn-danger', method: :delete  %>
        <% else %>
          <%= link_to 'Login', new_user_session_path, class: 'ms-auto btn btn-primary'  %>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-success mx-3'  %>
        <% end %>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
